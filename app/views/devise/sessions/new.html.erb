<div class="wrapper">
  <div class="sign_box">
    <h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,class: "text", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password,class: "text", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.label :パスワードを記録する %>
      <%= f.check_box :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "field_btn" %>
  </div>
<% end %>
</div>
</div>
