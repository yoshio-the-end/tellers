<div class="contents_wrapper bg">
  <div class="form_box">
  <h2>投稿編集</h2>

   <%= form_with model: @post, local:true do |f| %>

    <div class="field">
      <div class="form_name">
      <p>タイトル</p>
      </div>
      <%= f.text_field :title ,placeholder: "タイトルを入力",class: "text_field" %>
      </div>

      <div class="field">
      <div class="form_name">
      <p>カテゴリ</p>
      </div>
      <%= f.select :category_id,Category.all.map { |category| [category.name, category.id] }, class: "select_box" %>
      </div>
      <div class="field">
      <div class="form_name">
      <p>本文</p>
      </div>
      <%= f.text_area :text ,class: "text_area", placeholder: "本文を入力"%>
      </div>
    <div class="actions">
      <%= f.submit  "投稿する" ,class: "field_btn" %>
      </div>
  <% end %>
  </div>
</div>